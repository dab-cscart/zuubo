<?xml version="1.0"?>
<addon scheme="2.0">
    <id>vendor_data_premoderation</id>
    <name>Vendor data premoderation</name>
    <description>Lets you pre-moderate vendors activity</description>
    <version>1.0</version>
    <priority>1000</priority>
    <position>45</position>
    <status>active</status>
    <default_language>en</default_language>
    <auto_install>MULTIVENDOR</auto_install>
    <settings>
        <sections>
            <section id="general">
                <name>General</name>
                <items>
                    <item id="products_prior_approval">
                        <name>Products require prior approval</name>
                        <type>selectbox</type>
                        <default_value>none</default_value>
                        <variants>
                            <item id="none">
                                <name>None</name>
                                <translations>
                                    <item lang="ru">Ни один</item>
                                    <item lang="zh">不需要</item>
                                </translations>
                            </item>
                            <item id="custom">
                                <name>Custom</name>
                                <translations>
                                    <item lang="ru">Выборочно</item>
                                    <item lang="zh">海关</item>
                                </translations>
                            </item>
                            <item id="all">
                                <name>All vendors</name>
                                <translations>
                                    <item lang="ru">Все продавцы</item>
                                    <item lang="zh">所有供货商</item>
                                </translations>
                            </item>
                        </variants>
                        <tooltip>"None" - this option is disabled for all vendors; "Custom" - the option is enabled on a vendor details page (the Add-ons tab); "All vendors" - the option is enabled for all vendors.</tooltip>
                        <translations>
                            <item lang="ru">Товары требуют предварительного утверждения</item>
                            <item lang="ru" for="tooltip">"Ничего" - данная настройка отключена для всех продавцов; "Выборочно" - настройка влючается на странице редактирования продавца (во вкладке Модули); "Все продавцы" - настройка включена для всех продавцов.</item>
                            <item lang="zh">产品需要事先核准</item>
                            <item lang="zh" for="tooltip">"不需要" - 此选项已对所有供货商禁用; "海关" - 此选项在供货商资料页面启用(插件选项卡); "所有供货商" - 此选项对所有供货商启用.</item>
                        </translations>
                    </item>
                    <item id="products_updates_approval">
                        <name>Approve product info updates</name>
                        <type>selectbox</type>
                        <default_value>none</default_value>
                        <variants>
                            <item id="none">
                                <name>None</name>
                                <translations>
                                    <item lang="ru">Ни один</item>
                                    <item lang="zh">不需要</item>
                                </translations>
                            </item>
                            <item id="custom">
                                <name>Custom</name>
                                <translations>
                                    <item lang="ru">Выборочно</item>
                                    <item lang="zh">海关</item>
                                </translations>
                            </item>
                            <item id="all">
                                <name>All vendors</name>
                                <translations>
                                    <item lang="ru">Все продавцы</item>
                                    <item lang="zh">所有供货商</item>
                                </translations>
                            </item>
                        </variants>
                        <tooltip>"None" - this option is disabled for all vendors; "Custom" - the option is enabled on a vendor details page (the Add-ons tab); "All vendors" - the option is enabled for all vendors.</tooltip>
                        <translations>
                            <item lang="ru">Утверждать изменения в информации о товарах</item>
                            <item lang="ru" for="tooltip">"Ничего" - данная настройка отключена для всех продавцов; "Выборочно" - настройка влючается на странице редактирования продавца (во вкладке Модули); "Все продавцы" - настройка включена для всех продавцов.</item>
                            <item lang="zh">核准产品信息更新</item>
                            <item lang="zh" for="tooltip">"不需要" - 此选项已对所有供货商禁用; "海关" - 此选项在供货商资料页面启用(插件选项卡); "所有供货商" - 此选项对所有供货商启用.</item>
                        </translations>
                    </item>
                    <item id="vendor_profile_updates_approval">
                        <name>Approve vendor profile updates</name>
                        <type>selectbox</type>
                        <default_value>none</default_value>
                        <variants>
                            <item id="none">
                                <name>None</name>
                                <translations>
                                    <item lang="ru">Ни один</item>
                                    <item lang="zh">不需要</item>
                                </translations>
                            </item>
                            <item id="custom">
                                <name>Custom</name>
                                <translations>
                                    <item lang="ru">Выборочно</item>
                                    <item lang="zh">海关</item>
                                </translations>
                            </item>
                            <item id="all">
                                <name>All vendors</name>
                                <translations>
                                    <item lang="ru">Все продавцы</item>
                                    <item lang="zh">所有供货商</item>
                                </translations>
                            </item>
                        </variants>
                        <tooltip>"None" - this option is disabled for all vendors; "Custom" - the option is enabled on a vendor details page (the Add-ons tab); "All vendors" - the option is enabled for all vendors.</tooltip>
                        <translations>
                            <item lang="ru">Утверждать изменения в учётных записях продавцов</item>
                            <item lang="ru" for="tooltip">"Ничего" - данная настройка отключена для всех продавцов; "Выборочно" - настройка влючается на странице редактирования продавца (во вкладке Модули); "Все продавцы" - настройка включена для всех продавцов.</item>
                            <item lang="zh">核准供货商资料更新</item>
                            <item lang="zh" for="tooltip">"不需要" - 此选项已对所有供货商禁用; "海关" - 此选项在供货商资料页面启用(插件选项卡); "所有供货商" - 此选项对所有供货商启用.</item>
                        </translations>
                    </item>
                </items>
            </section>
        </sections>
    </settings>
